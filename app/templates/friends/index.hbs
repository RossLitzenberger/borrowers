
{{! The context here is the controller}}
<h2>Total friends: {{model.length}}</h2>
<table class="primary">
  <thead>
    <th>Name</th>
    <th>Articles</th>
    <th></th>
  </thead>
  <tbody>
    {{#each model as |friend|}}
    <tr>
      <td>{{link-to friend.fullName  'articles' friend}}</td>
      <td>{{friend.totalArticles}}</td>
      <td><a href="#" {{action "delete" friend}}>Delete</a></td>
      <td>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
